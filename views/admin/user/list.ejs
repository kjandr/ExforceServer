<!DOCTYPE html>
<html lang="de">

<!-- ğŸ¨ Dark Style -->
<link rel="stylesheet" href="/css/styles.css">

<head>
    <%- include(partials + '/head', { title: "Benutzer-Liste" }) %>
    <!-- Bootstrap CSS laden, wenn du es benÃ¶tigst -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- Eigene Dark Mode Overrides (sollten nach Bootstrap geladen werden) -->
</head>

<body class="dark-mode">
    <%- include(partials + '/nav') %>

    <div class="container py-4">
        <h2>ğŸ”Œ Benutzer-Ãœbersicht</h2>

        <!-- ğŸ”³ Toolbar -->
        <div class="dt-toolbar">
            <button id="btn-new" class="dt-btn">â• Neuer Benutzer</button>
            <button id="btn-edit" class="dt-btn">âœï¸ Bearbeiten</button>
            <button id="btn-delete" class="dt-btn">ğŸ—‘ï¸ LÃ¶schen</button>
        </div>

        <!-- ğŸ“„ Tabelle -->
        <table id="userTable" class="display cell-border stripe" style="width:100%">
            <thead>
            <tr>
                <th style="display:none;">ID</th> <!-- versteckt -->
                <th>Email</th>
                <th>Name</th>
                <th>Rolle</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td style="display:none;"><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.salutation %> <%= user.first_name %> <%= user.last_name %></td>
                    <td><%= user.role %></td>
                    <td><%= user.active ? 'âœ… Aktiv' : 'âŒ Inaktiv' %></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>

    <!-- ğŸ“¦ DataTables + Select + Buttons -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.7.0/css/select.dataTables.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.7.0/js/dataTables.select.min.js"></script>

    <!-- âš™ï¸ Init mit ID -->
    <script>
        $(document).ready(function () {
            const table = $('#userTable').DataTable({
                select: 'single',
                dom: 'Bfrtip',
                buttons: [],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/de-DE.json"
                },
                columnDefs: [
                    { targets: 0, visible: false } // ID-Spalte ausblenden
                ]
            });

            // â• Neuer Benutzer
            $('#btn-new').on('click', () => {
                window.location.href = '/admin/user/add';
            });

            // âœï¸ Bearbeiten
            $('#btn-edit').on('click', () => {
                const row = table.row({ selected: true }).data();
                if (!row) return alert("Bitte eine Zeile auswÃ¤hlen");
                const userId = row[0]; // erste Spalte = ID
                window.location.href = `/admin/user/edit/${userId}`;
            });

            // ğŸ—‘ï¸ LÃ¶schen
            $('#btn-delete').on('click', () => {
                const row = table.row({ selected: true }).data();
                if (!row) return alert("Bitte eine Zeile auswÃ¤hlen");
                const userId = row[0];
                if (confirm("Wirklich lÃ¶schen?")) {
                    fetch(`/admin/user/delete`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `id=${encodeURIComponent(userId)}`
                    }).then(() => window.location.reload());
                }
            });
        });
    </script>

<!-- Dark Mode Footer (ohne Bootstrap's bg-light) -->
<%- include(partials + '/footer') %>
</body>
</html>