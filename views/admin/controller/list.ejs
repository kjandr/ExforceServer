<!DOCTYPE html>
<html lang="de">
<head>
    <%- include(partials + '/head', { title: "Controller-Liste" }) %>
    <!-- Bootstrap CSS laden, wenn du es ben√∂tigst -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- Eigene Dark Mode Overrides (sollten nach Bootstrap geladen werden) -->
    <style>
        /* Globale Dark Mode Einstellungen f√ºr den gesamten Body */
        body.dark-mode {
            background-color: #1e1e1e !important;
            color: #fff !important;
        }
        body.dark-mode a {
            color: #fff !important;
        }
        /* DataTables Dark Overrides */
        #controllerTable {
            background-color: #2a2a2a !important;
            color: #fff !important;
        }
        #controllerTable thead {
            background-color: #003f75 !important;
            color: #fff !important;
        }
        #controllerTable tbody tr {
            background-color: #2a2a2a !important;
            color: #fff !important;
        }
        #controllerTable tbody tr:hover {
            background-color: #3a3a3a !important;
        }
        /* Toolbar-Buttons */
        .dt-toolbar {
            margin-bottom: 1rem;
        }
        .dt-btn {
            background-color: #333 !important;
            color: #fff !important;
            border: 1px solid #555 !important;
            padding: 6px 12px;
            margin-right: 5px;
            cursor: pointer;
            border-radius: 3px;
        }
        .dt-btn:hover {
            background-color: #555 !important;
        }
        /* DataTables Filter und Pagination */
        .dataTables_wrapper .dataTables_filter input,
        .dataTables_wrapper .dataTables_length select {
            background: #333 !important;
            color: #fff !important;
            border: 1px solid #555 !important;
            border-radius: 4px;
            padding: 5px;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            background-color: #2a2a2a !important;
            color: #fff !important;
            border: 1px solid #444 !important;
            margin: 2px;
            border-radius: 4px;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background-color: #555 !important;
            font-weight: bold !important;
        }
        .dataTables_wrapper .dataTables_info {
            color: #ccc !important;
        }
    </style>
</head>
<body class="dark-mode">
<%- include(partials + '/nav') %>

<div class="container py-4">
    <h2>üîå Controller-√úbersicht</h2>

    <!-- Toolbar -->
    <div class="dt-toolbar">
        <button id="btn-add" class="dt-btn">‚ûï Neuer Controller</button>
        <button id="btn-edit" class="dt-btn">‚úèÔ∏è Bearbeiten</button>
        <button id="btn-delete" class="dt-btn">üóëÔ∏è L√∂schen</button>
    </div>

    <!-- DataTable -->
    <table id="controllerTable" class="display cell-border stripe" style="width:100%;">
        <thead>
        <tr>
            <th style="display:none;">ID</th>
            <th>Seriennummer</th>
            <th>Typ</th>
            <th>UUID</th>
            <th>Bemerkung</th>
        </tr>
        </thead>
        <tbody>
        <% controllers.forEach(c => { %>
            <tr>
                <td style="display:none;"><%= c.id %></td>
                <td><%= c.serial_no %></td>
                <td><%= c.type %></td>
                <td><%= c.uuid %></td>
                <td><%= c.remark || "-" %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<!-- DataTables, Buttons & Select Erweiterungen -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/select/1.7.0/css/select.dataTables.min.css">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/select/1.7.0/js/dataTables.select.min.js"></script>

<!-- DataTable Initialisierung -->
<script>
    $(document).ready(function () {
        const table = $('#controllerTable').DataTable({
            select: 'single',
            dom: 'Bfrtip',
            buttons: [],
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/de-DE.json"
            },
            columnDefs: [
                { targets: 0, visible: false } // Verstecke die ID-Spalte
            ]
        });

        // Neuer Controller
        $('#btn-add').on('click', () => {
            window.location.href = '/admin/controller/add';
        });

        // Bearbeiten
        $('#btn-edit').on('click', () => {
            const row = table.row({ selected: true }).data();
            if (!row) return alert("Bitte einen Controller ausw√§hlen.");
            window.location.href = `/admin/controller/edit/${row[0]}`;
        });

        // L√∂schen
        $('#btn-delete').on('click', () => {
            const row = table.row({ selected: true }).data();
            if (!row) return alert("Bitte einen Controller ausw√§hlen.");
            if (confirm("Wirklich l√∂schen?")) {
                fetch(`/admin/controller/delete`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${encodeURIComponent(row[0])}`
                }).then(() => window.location.reload());
            }
        });
    });
</script>

<!-- Dark Mode Footer (ohne Bootstrap's bg-light) -->
<%- include(partials + '/footer') %>
</body>
</html>
