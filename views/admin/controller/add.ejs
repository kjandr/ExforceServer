<!DOCTYPE html>
<html lang="de">

<!-- 🎨 Dark Style -->
<link rel="stylesheet" href="/css/styles.css">

<%- include(partials + '/head', { title: "Controller hinzufügen" }) %>

<body class="dark-mode">
    <%- include(partials + '/nav') %>

    <div class="container py-4">
        <form method="POST" action="/admin/controller/add" class="edit-form">
            <label for="select_engine_type">Motor Typ auswählen:</label>
            <select id="motor_type" onchange="applyMotorType()">
                <option value="none">Kein Motor Type</option>
                <option value="EX8-620">EX8-620</option>
                <option value="EX8-560">EX8-560</option>
            </select>

            <label for="serial_no">Seriennummer:</label>
            <input type="text" id="serial_no" name="serial_no" required>

            <label for="remark">Bemerkung:</label>
            <input type="text" id="remark" name="remark">

            <label for="user_id">User ID:</label>
            <input type="number" id="user_id" name="user_id" required>

            <input type="hidden" id="type" name="type">

            <label for="uuid">UUID:</label>
            <input type="text" id="uuid" name="uuid" required>

            <label for="battery_cutoff_end">Battery Cutoff End:</label>
            <input type="number" step="0.1" id="battery_cutoff_end" name="battery_cutoff_end" required>

            <label for="battery_cutoff_start">Battery Cutoff Start:</label>
            <input type="number" step="0.1" id="battery_cutoff_start" name="battery_cutoff_start" required>

            <label for="battery_cells">Battery Cells:</label>
            <select id="cell" name="battery_cells" onchange="applyCell()">
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
            </select>

            <label for="battery_ah">Battery Ah:</label>
            <input type="number" step="0.1" id="battery_ah" name="battery_ah" required>

            <label for="battery_current_max">Battery Current Max:</label>
            <input type="number" id="battery_current_max" name="battery_current_max" required>

            <label for="battery_current_min">Battery Current Min:</label>
            <input type="number" id="battery_current_min" name="battery_current_min" required>

            <label for="operating_time_min">Operating Time Min:</label>
            <input type="number" id="operating_time_min" name="operating_time_min" required>

            <div class="form-actions">
                <button type="submit" class="btn-success">💾 Speichern</button>
                <a href="/admin/controller/list"><button type="button" class="btn-danger">Abbrechen</button></a>
            </div>
        </form>
    </div>

    <%- include(partials + '/footer') %>
</body>

<script>
    // Motor Type
    const motor_typs = {
        "none": {
            serial_no: "",
            remark: "",
            user_id: -1,
            type: "",
            uuid: "",
            battery_cutoff_end: 0,
            battery_cutoff_start: 0,
            battery_cells: 10,
            battery_ah: 0,
            battery_current_max: 0,
            battery_current_min: 0,
            operating_time_min: 0
        },
        "EX8-620": {
            serial_no: "A13",
            remark: "",
            user_id: -1,
            type: "EX8-620",
            uuid: "uuid",
            battery_cutoff_end: 42.0,
            battery_cutoff_start: 44.5,
            battery_cells: 14,
            battery_ah: 14,
            battery_current_max: 5,
            battery_current_min: -5,
            operating_time_min: 0
        },
        "EX8-560": {
            serial_no: "A18",
            remark: "",
            user_id: -1,
            type: "EX8-560",
            uuid: "uuid",
            battery_cutoff_end: 39.0,
            battery_cutoff_start: 41.5,
            battery_cells: 13,
            battery_ah: 14,
            battery_current_max: 5,
            battery_current_min: -5,
            operating_time_min: 0
        }
    };

    const cells = {
        "10": {
            battery_cutoff_start: 34.0,
            battery_cutoff_end: 31.0
        },
        "11": {
            battery_cutoff_start: 37.4,
            battery_cutoff_end: 34.1
        },
        "12": {
            battery_cutoff_start: 40.8,
            battery_cutoff_end: 37.2
        },
        "13": {
            battery_cutoff_start: 41.5,
            battery_cutoff_end: 39.0
        },
        "14": {
            battery_cutoff_start: 44.5,
            battery_cutoff_end: 42.0
        }
    };

    function applyMotorType() {
        const selected = document.getElementById("motor_type").value;
        const values = motor_typs[selected];
        if (!values) return;

        Object.entries(values).forEach(([key, val]) => {
            const input = document.getElementById(key);
            if (input) {
                input.value = val;
            }

            // battery_cells in das <select id="cell"> schreiben
            if (key === "battery_cells") {
                const select = document.getElementById("cell");
                if (select) select.value = val;
            }
        });

        // 🔁 Jetzt zusätzlich: Den motor_type-Wert direkt ins versteckte Feld 'type' schreiben
        const typeField = document.getElementById("type");
        if (typeField) typeField.value = selected;
    }

    function applyCell() {
        const selected = document.getElementById("cell").value;
        const values = cells[selected];
        if (!values) return;

        Object.entries(values).forEach(([key, val]) => {
            const input = document.getElementById(key);
            if (input) input.value = val;
        });
    }
</script>
