<!DOCTYPE html>
<html lang="de">

<!-- üé® Dark Style -->
<link rel="stylesheet" href="/css/styles.css">

<head>
    <%- include(partials + '/head', { title: "Motor-Liste" }) %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>

<body class="dark-mode">
<%- include(partials + '/nav') %>

<div class="container py-4">
    <h2>‚öôÔ∏è Motor-√úbersicht</h2>

    <!-- Toolbar -->
    <div class="dt-toolbar">
        <button id="btn-add" class="dt-btn">‚ûï Neuer Motor</button>
        <button id="btn-edit" class="dt-btn">‚úèÔ∏è Bearbeiten</button>
        <button id="btn-delete" class="dt-btn">üóëÔ∏è L√∂schen</button>
    </div>

    <!-- DataTable -->
    <table id="engineTable" class="display cell-border stripe" style="width:100%;">
        <thead>
        <tr>
            <th style="display:none;">ID</th>
            <th>Seriennummer</th>
            <th>Typ</th>
            <th>Controller-ID</th>
            <th>Bemerkung</th>
        </tr>
        </thead>
        <tbody>
        <% engines.forEach(e => { %>
            <tr>
                <td style="display:none;"><%= e.id %></td>
                <td><%= e.serial_no %></td>
                <td><%= e.type %></td>
                <td><%= e.controller_id %></td>
                <td><%= e.remark || "-" %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<!-- DataTables, Buttons & Select Erweiterungen -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/select/1.7.0/css/select.dataTables.min.css">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/select/1.7.0/js/dataTables.select.min.js"></script>

<!-- DataTable Initialisierung -->
<script>
    $(document).ready(function () {
        const table = $('#engineTable').DataTable({
            select: 'single',
            dom: 'Bfrtip',
            buttons: [],
            language: {
                url: "/js/i18n/de-DE.json"
            },
            columnDefs: [
                { targets: 0, visible: false }
            ]
        });

        $('#btn-add').on('click', () => {
            window.location.href = '/admin/engine/add';
        });

        $('#btn-edit').on('click', () => {
            const row = table.row({ selected: true }).data();
            if (!row) return alert("Bitte einen Motor ausw√§hlen.");
            window.location.href = `/admin/engine/edit/${row[0]}`;
        });

        $('#btn-delete').on('click', () => {
            const row = table.row({ selected: true }).data();
            if (!row) return alert("Bitte einen Motor ausw√§hlen.");
            if (confirm("Wirklich l√∂schen?")) {
                fetch(`/admin/engine/delete`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${encodeURIComponent(row[0])}`
                }).then(() => window.location.reload());
            }
        });
    });
</script>

<%- include(partials + '/footer') %>
</body>
</html>
