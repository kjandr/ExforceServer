<%- include(partials + '/head', { title: 'Passwort ändern' }) %>

<h2 style="text-align:center; margin-bottom: 2rem;">🔑 Passwort ändern für Benutzer ID: <%= id %></h2>

<form method="POST" action="/admin/change-password/<%= id %>" style="max-width: 400px; margin: auto;">
    <label for="newPassword">Neues Passwort:</label><br>
    <input type="password" name="newPassword" id="newPassword" required style="width:100%; padding:8px; margin-bottom:1rem;"><br>

    <button type="submit" class="btn-success">✅ Passwort speichern</button>
    <a href="/admin"><button type="button" class="btn-info">⬅️ Zurück</button></a>
</form>
